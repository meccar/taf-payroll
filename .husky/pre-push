#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-push checks..."
echo ""

echo "ğŸ“ Type checking..."
yarn type-check
if [ $? -ne 0 ]; then
  echo "âŒ Type check failed. Please fix the errors before pushing."
  exit 1
fi

echo "âœ… Type check passed"
echo ""

echo "ğŸ” Linting..."
yarn lint:check
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed. Please fix the errors before pushing."
  echo "ğŸ’¡ Run 'yarn lint' to auto-fix some issues."
  exit 1
fi

echo "âœ… Linting passed"
echo ""

echo "ğŸ’… Formatting check..."
yarn format:check
if [ $? -ne 0 ]; then
  echo "âŒ Formatting check failed. Please fix the formatting before pushing."
  echo "ğŸ’¡ Run 'yarn format' to auto-format the code."
  exit 1
fi

echo "âœ… Formatting check passed"
